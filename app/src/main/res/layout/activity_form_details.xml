<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".FormDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="BD CLEAN Member From"
        android:background="@color/green_2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="105dp"
        >

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:inputType="text"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:hint="@string/certificate_name"
                android:textSize="14sp"
                android:paddingStart="15dp"/>

            <EditText
                android:id="@+id/user_name_bn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/black"
                android:hint="@string/full_name_bangla"
                android:textSize="14sp"
                android:paddingStart="15dp"
                android:layout_marginTop="15dp"/>


            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:hint="@string/email"
                android:textSize="14sp"
                android:paddingStart="15dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/black"
                android:hint="@string/password"
                android:textSize="14sp"
                android:paddingStart="15dp"
                android:layout_marginTop="15dp"/>


            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/black"
                android:hint="@string/confirm_password"
                android:textSize="14sp"
                android:paddingStart="15dp"
                android:layout_marginTop="15dp"/>


            <Button
                android:id="@+id/date_birth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/date_of_birth"
                android:textColor="@color/bdclean_green"
                android:fontFamily="@font/bdclean_bold"
                android:backgroundTint="@color/white"
                android:background="@drawable/button_shape_1"/>

            <RelativeLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="@string/choose_gender"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/bdclean"
                    android:textColor="@color/text_color"/>

                <Button
                    android:id="@+id/select_gender"
                    android:layout_width="200dp"
                    android:background="@null"
                    android:text="@string/choose_gender"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:layout_height="35dp"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/presentAddress"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/black"
                android:hint="@string/present_address"
                android:textSize="14sp"
                android:gravity="top|start"
                android:padding="10dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/facebook_link"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:hint="@string/facebook_id"
                android:textSize="14sp"
                android:paddingStart="15dp"/>

            <EditText
                android:id="@+id/nid_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/nid_birth_certificate_passport_number"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="number"/>


            <EditText
                android:id="@+id/father_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/father_s_name"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/father_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/father_contact"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/father_occupation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="Father's Occupation"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/mother_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="Mother's Name"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"/>


            <EditText
                android:id="@+id/mother_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="Mother's Contact Number"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/mother_occupation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/mother_s_occupation"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/number_of_brothers"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/total_number_of_brothers"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/number_of_sister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/total_number_of_sisters"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>

            <RelativeLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="@string/reference_by"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/bdclean"
                    android:textColor="@color/text_color"/>

                <Button
                    android:id="@+id/select_reference"
                    android:layout_width="200dp"
                    android:background="@null"
                    android:text="@string/reference_by"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:layout_height="35dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="@string/blood_group"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"/>

                <Button
                    android:id="@+id/select_blood"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:text="@string/blood_group"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"/>

            </RelativeLayout>


            <EditText
                android:id="@+id/field_of_experience"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/field_of_experience"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/years_of_experience"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/years_of_experience"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:text="@string/religion"
                    android:textColor="@color/text_color"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/religion_spinner"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="@string/select"
                    android:textSize="12sp"
                    android:drawableEnd="@drawable/icon_dropdown"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:text="@string/religion"
                    android:textColor="@color/text_color"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/marital_status"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="@string/select"
                    android:textSize="12sp"
                    android:drawableEnd="@drawable/icon_dropdown"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/spouse_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/spouse_name"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/num_of_sons"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/number_of_sons"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:inputType="phone"/>


            <EditText
                android:id="@+id/highest_education"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="Highest Education"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/exam_degree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/exam_degree"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/subject_major"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/subject_major"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/university_board"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/university_board"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="text"/>


            <EditText
                android:id="@+id/education_institute"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/educational_institute"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/pass_year"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/passing_year"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="number"/>

            <EditText
                android:id="@+id/registation_roll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/registration_no_roll_no"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="number"/>

            <EditText
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:hint="@string/result"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:paddingHorizontal="15dp"
                android:inputType="text"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edittext_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="@string/t_shirt_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:textColor="@color/text_color"/>

                <Button
                    android:id="@+id/select_shirt_size"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:text="@string/size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/layout_shape_2"
                android:backgroundTint="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_profile_photo"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="@font/bdclean_bold"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/member_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_camera" />

            </RelativeLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>